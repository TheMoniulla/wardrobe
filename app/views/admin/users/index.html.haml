%h1 Users
= link_to 'New user', new_admin_user_path, class: 'btn btn-success'

%table.table.table-striped
  %tr
    %th Name
    %th Age
    %th Sex
    %th Actions
  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.age
      %td= user.sex
      %td
        = link_to 'Show', admin_user_path(user.id)
        = link_to 'Edit', edit_admin_user_path(user.id)
        = link_to 'Delete', admin_user_path(user.id), method: :delete, data: {confirm: 'Are you sure?'}
